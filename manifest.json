{
  "manifest_version": 3,
  "name": "Email Checker",
  "version": "1.2.0",
  "description": "Find and validate email addresses on any webpage with professional email validation",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://mail7.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Email Checker - Find & Validate Emails",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 